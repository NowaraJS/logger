		"globals": "^16.3.0",
		"typescript-eslint": "^8.37.0",
		"typescript": "^5.8.3"
	},
	"exports": {
		"./error": "./dist/error/index.js",
		"./error/types": "./dist/error/types/index.js",
		"./strategies": "./dist/strategies/index.js",
		"./types": "./dist/types/index.js",
		".": "./dist/index.js"
	},
